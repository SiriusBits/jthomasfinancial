---
interface Props {
  headline: string;
  subtext?: string;
  ctaHref?: string;
  ctaLabel?: string;
}

const { headline, subtext, ctaHref, ctaLabel } = Astro.props;
---

<section class="bg-navy text-white py-16 md:py-24">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h1 class="font-heading text-3xl md:text-4xl font-bold text-gold">{headline}</h1>
    {subtext && <p class="mt-4 text-slate-200 text-lg">{subtext}</p>}
    {ctaHref && ctaLabel && (
      <div class="mt-8">
        <a
          href={ctaHref}
          class="inline-flex items-center justify-center font-body font-medium rounded px-6 py-3 bg-gold text-navy hover:bg-gold/90 transition-colors"
        >
          {ctaLabel}
        </a>
      </div>
    )}
  </div>
</section>

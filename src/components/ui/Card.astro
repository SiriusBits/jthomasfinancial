---
interface Props {
  title?: string;
  icon?: any;
  image?: string;
  class?: string;
}

const { title, icon: IconComponent, image, class: className } = Astro.props;
---

<div class:list={['rounded-lg border border-slate-200 bg-white shadow-sm overflow-hidden', className]}>
  {title && (
    <h3 class="font-heading font-semibold text-navy text-lg px-5 pt-5 pb-2 flex items-center gap-3">
      {IconComponent && (
        <span class="flex shrink-0 rounded-lg bg-gold/10 p-2 text-gold">
          <IconComponent size={22} class="text-current" />
        </span>
      )}
      {title}
    </h3>
  )}
  <div class={image ? 'px-5 pb-5 flex gap-4 items-start' : title ? 'px-5 pb-5' : 'p-5'}>
    {image && (
      <div class="w-[180px] h-[120px] shrink-0 overflow-hidden rounded-md">
        <img
          src={image}
          alt=""
          class="h-full w-full object-cover"
          width="180"
          height="120"
        />
      </div>
    )}
    <div class={image ? 'min-w-0 flex-1 flex flex-col gap-4' : ''}>
      <slot />
    </div>
  </div>
</div>

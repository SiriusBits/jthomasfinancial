---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import { getEntry, render } from "astro:content";

const entry = await getEntry("pages", "about");
if (!entry) throw new Error("About page content not found");
const { Content } = await render(entry);
---

<BaseLayout
  title={`${entry.data.title} — J Thomas Financial`}
  description={entry.data.description}
>
  <main class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid gap-10 md:grid-cols-2 md:gap-12 md:items-center">
      <div class="rounded-lg overflow-hidden shadow-md bg-slate-100">
        <img
          src="/assets/about-placeholder.svg"
          alt="J Thomas and Associates — our team or office"
          width="600"
          height="400"
          class="w-full h-auto object-cover"
          loading="eager"
        />
      </div>
      <article class="prose prose-slate max-w-none">
        <Content />
      </article>
    </div>

    <section class="mt-16 md:mt-24 pt-16 md:pt-20 border-t border-slate-200">
      <h2 class="font-heading text-navy text-2xl md:text-3xl font-semibold mb-8">
        Our Commitment to Excellence
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-[2fr_1fr] gap-10 md:gap-12 md:items-start">
        <div>
          <p class="text-neutral-600 leading-relaxed mb-6">
            At J Thomas and Associates, we believe that exceptional financial services go beyond numbers and compliance. We're committed to building lasting relationships with our clients based on trust, transparency, and results. Our team takes the time to understand your unique situation and goals, providing guidance that's both technically sound and practically applicable.
          </p>
          <p class="text-neutral-600 leading-relaxed">
            We invest in ongoing professional development and stay current with evolving regulations and best practices to ensure you receive the highest quality service. When you work with us, you gain a trusted advisor dedicated to your financial success.
          </p>
        </div>
        <div class="md:pl-4 md:border-l md:border-slate-200">
          <h3 class="font-heading text-navy text-xl font-semibold mb-6">
            Our Values
          </h3>
          <ul class="space-y-3 list-none pl-0">
            <li class="flex items-start gap-3">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-gold shrink-0" aria-hidden="true" />
              <span class="text-neutral-600">Integrity in every interaction</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-gold shrink-0" aria-hidden="true" />
              <span class="text-neutral-600">Excellence in service delivery</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-gold shrink-0" aria-hidden="true" />
              <span class="text-neutral-600">Responsiveness to client needs</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-gold shrink-0" aria-hidden="true" />
              <span class="text-neutral-600">Continuous improvement</span>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={['rounded-lg border border-slate-200 bg-white shadow-sm overflow-hidden', className]}>
  {title && (
    <h3 class="font-heading font-semibold text-navy text-lg px-5 pt-5 pb-2">{title}</h3>
  )}
  <div class={title ? 'px-5 pb-5' : 'p-5'}>
    <slot />
  </div>
</div>

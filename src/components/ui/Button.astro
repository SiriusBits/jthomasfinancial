---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary';
  type?: 'button' | 'submit';
  class?: string;
}

const { href, variant = 'primary', type = 'button', class: className } = Astro.props;

const base =
  'inline-flex items-center justify-center font-body font-medium rounded px-4 py-2 text-sm transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gold';

const variants = {
  primary: 'bg-gold text-navy hover:bg-gold/90 focus:ring-gold',
  secondary: 'border-2 border-navy text-navy hover:bg-navy hover:text-white focus:ring-navy',
};
---

{href ? (
  <a href={href} class:list={[base, variants[variant], className]}><slot /></a>
) : (
  <button type={type} class:list={[base, variants[variant], className]}><slot /></button>
)}

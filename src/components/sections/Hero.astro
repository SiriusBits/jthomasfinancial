---
import Button from "@/components/ui/Button.astro";
import HeroLogo from "@/components/HeroLogo.astro";
import Icon from "@/components/ui/Icon.astro";
import { ArrowRight } from "@/icons/lucide-icons";

interface Props {
  headline: string;
  subtext?: string;
  ctaHref?: string;
  ctaLabel?: string;
}

const { headline, subtext, ctaHref, ctaLabel } = Astro.props;
---

<section
  id="hero"
  class="relative bg-navy text-white py-16 md:py-24 overflow-hidden"
>
  <div
    class="absolute inset-0 opacity-40"
    style="background-image: url('/assets/hero-pattern.svg'); background-size: 60px 60px;"
    aria-hidden="true"
  >
  </div>
  <div
    class="relative z-10 max-w-4xl mx-auto px-4 flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-8"
  >
    <HeroLogo class="h-60 sm:h-80 w-auto" />
    <div class="text-center sm:text-left">
      <h1 class="font-heading text-3xl md:text-4xl font-bold text-gold">
        {headline}
      </h1>
      {subtext && <p class="mt-4 text-slate-200 text-lg">{subtext}</p>}
      {
        ctaHref && ctaLabel && (
          <div class="mt-8">
            <Button href={ctaHref} class="px-6 py-3">
              {ctaLabel}
              <Icon icon={ArrowRight} size={18} slot="icon" />
            </Button>
          </div>
        )
      }
    </div>
  </div>
</section>

---
const features = [
  {
    title: 'Experienced Team',
    description: 'Decades of combined expertise in accounting, tax, and financial advisory services across diverse industries.',
  },
  {
    title: 'Personalized Service',
    description: 'Customized solutions tailored to your unique business and personal financial goals and circumstances.',
  },
  {
    title: 'Proactive Approach',
    description: 'Year-round guidance and strategic planning to help you stay ahead of challenges and opportunities.',
  },
];
---

<section class="relative py-16 md:py-24 overflow-hidden">
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('/assets/images/business-people-at-conference-table.jpg');"
    aria-hidden="true"
  />
  <div class="absolute inset-0 bg-white/80" aria-hidden="true" />
  <div class="relative z-10 max-w-6xl mx-auto px-4">
    <h2 class="font-heading text-navy text-2xl md:text-3xl font-semibold text-center mb-12">
      Why Choose J Thomas and Associates
    </h2>
    <div class="grid gap-6 sm:grid-cols-3">
      {features.map((feature) => (
        <div
          class="rounded-lg bg-neutral-50/95 border border-neutral-200/80 p-6 shadow-sm"
        >
          <h3 class="font-heading font-semibold text-navy text-lg mb-3">
            {feature.title}
          </h3>
          <p class="text-neutral-700 text-sm leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
